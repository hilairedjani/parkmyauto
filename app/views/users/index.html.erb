<h2>Users</h2>
<hr>

<div class="table-responsive">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width: 5%">#</th>
                        <th scope="col" style="width: 60%">User</th>
                        <th scope="col" style="width: 15%"></th>
                        <th scope="col" style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody>
                <% @users.each.with_index do |user, index| %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= link_to "#{user.email}", user_path(user) %></td>
                        <td><%= link_to "Edit", edit_user_path(user), class: "btn btn-primary float-left" %></td>
                        <td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Delete this user?"}, class: "btn btn-danger float-right" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
</div>